{
  "name": "secure-api",
  "version": "1.0.0",
  "description": "Secure Express.js starter (CSRF + example auth)",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:routes": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/routes",
    "test:services": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/services",
    "test:unit": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/middlewares",
    "test:middlewares": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js tests/middlewares",
    "test:health": "curl -f http://localhost:3000/api/health",
    "db:reset": "npx prisma migrate reset --force",
    "db:reset:test": "cross-env NODE_ENV=test DATABASE_URL=\"mysql://root:root@localhost:3306/secure_api_test\" npx prisma migrate reset --force",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "express-rate-limit": "^7.1.0",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "joi": "^17.10.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.0",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4"
  }
}
